FROM rust:1.75-slim-bookworm

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    pkg-config \
    libssl-dev \
    curl \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install development tools
RUN cargo install cargo-watch cargo-audit cargo-deny cargo-udeps

# Create non-root user
RUN useradd -m -s /bin/bash dev
USER dev

# Set up workspace
WORKDIR /workspace

# Copy Cargo configuration files
COPY --chown=dev:dev Cargo.toml .
COPY --chown=dev:dev core/Cargo.toml core/
COPY --chown=dev:dev api/Cargo.toml api/
COPY --chown=dev:dev plugins/Cargo.toml plugins/

# Create dummy source files for initial dependency download
RUN mkdir -p core/src api/src plugins/src \
    && echo "fn main() {}" > core/src/lib.rs \
    && echo "fn main() {}" > api/src/lib.rs \
    && echo "fn main() {}" > plugins/src/lib.rs

# Download and compile dependencies
RUN cargo fetch

# Clean up dummy files
RUN rm -rf core/src api/src plugins/src

# Set up development environment
ENV RUST_BACKTRACE=1
ENV RUST_LOG=debug

CMD ["cargo", "watch", "-x", "check", "-x", "test"] 